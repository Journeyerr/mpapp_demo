@import '../common/common.wxss';
.search{
    padding: 20rpx;
}
.search-text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50rpx;
    color: #aaa;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 20rpx;
}
.search-text icon{
    margin-right: 10rpx;
}
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}
.selected {
    margin: auto;
    padding:10rpx 0;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #AB956D;
    text-align: center;
}
.select-top-small{
    width: 375rpx;
    height: 375rpx;
    float: left;
}
.select-bottom,.select-top{
    width: 100%;
    height: 375rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}

.select-top-small text{
    border-radius: 20rpx;
    color: #AB956D;
}

.newest-box{
    /*padding:0 10rpx;*/
}
.newest-box .newest-list{
    border-radius: 25px;
    display: inline-block;
    width: 370rpx;
    height: 480rpx;
    margin: 0;
    text-align: center;
    /*background: #AB956D;*/
    color: #AB956D;
}

.newest-box .newest-list:nth-child(2n){
    margin-right: 0;
}
.newest-box .newest-list image{
    width: 360rpx;
    height: 350rpx;
    margin: 0rpx 10rpx 0rpx;
    border-radius:20rpx;
}
.newest-box .newest-list .newest-text{
    font-size: 32rpx;
}
